<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.netalu.netaluapp.RegistrationActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="bottom"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/businessNameTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:text="Business Name"
                        android:textSize="@dimen/text_form_label" />

                    <TextView
                        android:id="@+id/businessNameDetailTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_form_label" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/descriptionTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="@dimen/text_form_label" />

                    <TextView
                        android:id="@+id/descriptionDetailTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_form_label" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/cityTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:text="City"
                        android:textSize="@dimen/text_form_label" />

                    <TextView
                        android:id="@+id/cityDetailTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_form_label" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/businessAddress1TextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:text="Address 1"
                        android:textSize="@dimen/text_form_label" />

                    <TextView
                        android:id="@+id/businessAddress1DetailTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_form_label" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/businessAddress2TextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:text="Address 2"
                        android:textSize="@dimen/text_form_label" />

                    <TextView
                        android:id="@+id/businessAddress2DetailTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_form_label" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/provinceTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:text="Province"
                        android:textSize="@dimen/text_form_label" />

                    <TextView
                        android:id="@+id/provinceDetailTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.5"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_form_label" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/postalCodeTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:text="Postal Code"
                        android:textSize="@dimen/text_form_label" />

                    <TextView
                        android:id="@+id/postalCodeDetailTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_form_label" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/phoneTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:textSize="@dimen/text_form_label" />

                    <TextView
                        android:id="@+id/phoneDetailTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_form_label" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/emailTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="@dimen/text_form_label" />

                    <TextView
                        android:id="@+id/emailDetailTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_form_label" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/websiteTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:text="Website"
                        android:textSize="@dimen/text_form_label" />

                    <TextView
                        android:id="@+id/websiteDetailTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_form_label" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/longitudeTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:text="Longitude"
                        android:textSize="@dimen/text_form_label" />

                    <TextView
                        android:id="@+id/longitudeDetailTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_form_label" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/latitudeTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:text="Latitude"
                        android:textSize="@dimen/text_form_label" />

                    <TextView
                        android:id="@+id/latitudeDetailTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_form_label" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

