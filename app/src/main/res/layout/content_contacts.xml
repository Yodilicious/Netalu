<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.netalu.netaluapp.ContactsActivity"
    tools:showIn="@layout/activity_contacts">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="bottom"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/phoneImage"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_call_black_24dp"
                        android:layout_marginBottom="@dimen/margin_icon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/phoneTextView"
                            android:layout_width="match_parent"
                            android:layout_weight="0.65"
                            android:layout_height="wrap_content"
                            android:text="Phone Number"
                            android:textSize="@dimen/text_form_title_label" />

                        <TextView
                            android:id="@+id/phoneDetailTextView"
                            android:layout_width="match_parent"
                            android:layout_weight="0.65"
                            android:layout_height="wrap_content"
                            android:text="(226) 232-5520"
                            android:textSize="@dimen/text_form_label" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/emailImage"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_mail_outline_black_24dp"
                        android:layout_marginBottom="@dimen/margin_icon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/emailTextView"
                            android:layout_width="match_parent"
                            android:layout_weight="0.65"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textSize="@dimen/text_form_title_label" />

                        <TextView
                            android:id="@+id/emailDetailTextView"
                            android:layout_width="match_parent"
                            android:layout_weight="0.65"
                            android:layout_height="wrap_content"
                            android:text="visser.jodi@gmail.com"
                            android:textSize="@dimen/text_form_label" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/websiteImage"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_web_black_24dp"
                        android:layout_marginBottom="@dimen/margin_icon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <TextView
                            android:id="@+id/websiteTextView"
                            android:layout_width="match_parent"
                            android:layout_weight="0.65"
                            android:layout_height="wrap_content"
                            android:text="Website"
                            android:textSize="@dimen/text_form_title_label" />

                        <TextView
                            android:id="@+id/websiteDetailTextView"
                            android:layout_width="match_parent"
                            android:layout_weight="0.65"
                            android:layout_height="wrap_content"
                            android:text="www.netalu.com"
                            android:textSize="@dimen/text_form_label" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
