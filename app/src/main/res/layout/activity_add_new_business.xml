<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.netalu.netaluapp.RegistrationActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="bottom"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/cameraImageView"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/photoButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Take a Photo"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/downloadImageButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Download Image"
                        android:layout_weight="1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/businessNameTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:text="Business Name"
                        android:textSize="@dimen/text_form_label" />

                    <EditText
                        android:id="@+id/businessNameEditText"
                        android:layout_width="match_parent"
                        android:layout_weight="0.35"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName|textCapWords"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/descriptionTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:text="Details"
                        android:textSize="@dimen/text_form_label" />

                    <EditText
                        android:id="@+id/descriptionEditText"
                        android:layout_width="match_parent"
                        android:layout_weight="0.35"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/categoryTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textSize="@dimen/text_form_label" />

                    <Spinner
                        android:id="@+id/categorySpinner"
                        android:layout_width="match_parent"
                        android:layout_weight="0.35"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_form_label" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/businessAddress1TextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:text="Address 1"
                        android:textSize="@dimen/text_form_label" />

                    <EditText
                        android:id="@+id/businessAddress1EditText"
                        android:layout_width="match_parent"
                        android:layout_weight="0.35"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName|textCapWords"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/businessAddress2TextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:text="Address 2"
                        android:textSize="@dimen/text_form_label" />

                    <EditText
                        android:id="@+id/businessAddress2EditText"
                        android:layout_width="match_parent"
                        android:layout_weight="0.35"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName|textCapWords"
                        android:text="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/cityTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:text="City"
                        android:textSize="@dimen/text_form_label" />

                    <EditText
                        android:id="@+id/cityEditText"
                        android:layout_width="match_parent"
                        android:layout_weight="0.35"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPersonName|textCapWords" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/provinceTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:text="Province"
                        android:textSize="@dimen/text_form_label" />

                    <Spinner
                        android:id="@+id/provinceSpinner"
                        android:layout_width="match_parent"
                        android:layout_weight="0.35"
                        android:layout_height="match_parent"
                        android:textSize="@dimen/text_form_label" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/postalCodeTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:text="Postal Code"
                        android:textSize="@dimen/text_form_label" />

                    <EditText
                        android:id="@+id/postalCodeEditText"
                        android:layout_width="match_parent"
                        android:layout_weight="0.35"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="textPostalAddress" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/phoneTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:textSize="@dimen/text_form_label" />

                    <EditText
                        android:id="@+id/phoneEditText"
                        android:layout_width="match_parent"
                        android:layout_weight="0.35"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="phone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/emailTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="@dimen/text_form_label" />

                    <EditText
                        android:id="@+id/emailEditText"
                        android:layout_width="match_parent"
                        android:layout_weight="0.35"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/websiteTextView"
                        android:layout_width="match_parent"
                        android:layout_weight="0.65"
                        android:layout_height="wrap_content"
                        android:text="Website"
                        android:textSize="@dimen/text_form_label" />

                    <EditText
                        android:id="@+id/websiteEditText"
                        android:layout_width="match_parent"
                        android:layout_weight="0.35"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="text" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/addNewBusiness"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Add New Business" />
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
